<div class="card">
  <h2>Edit <%= @task[:name] %></h2>

  <%= form_for(@task) do |f| %>
  <div class="form-group">
    <strong class="title"><%= f.label :title %></strong>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <strong class="title"><%= f.label :details %></strong>
    <%= f.text_field :details %>
  </div>
  <div class="form-group">
    <strong class="title"><%= f.label :completed %></strong>
    <% f.check_box :completed, class:"form-control w-25" %>
  </div>
  <br>
  <%= f.submit class:"btn btn-primary" %>
  <% end %>

  <%= link_to "Back to list", tasks_path %>

</div>


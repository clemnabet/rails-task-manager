<div class="container pt-5">
  <h1>Tasks Manager</h1>
  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class='row'>
        <% if task.completed == true %>
        <i class=" far fa-check-square"> </i>
        <% else  %>
        <i class="far fa-square"> </i>
        <% end %>
        <%= link_to(task.title, task_path(task.id), class:"list-group-item list-group-item-action") %>
      </li>
    <% end %>
  </ul>

  <div class="d-flex justify-content-center">
    <%= link_to "Create a new task", new_task_path, class:"btn btn-secondary w-50" %>
  </div>

</div>
